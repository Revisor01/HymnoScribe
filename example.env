# Umgebung (development, production)
NODE_ENV=development

# Port, auf dem der Server läuft
PORT=9615

# URL der Anwendung
URL=http://localhost:9615

# Datenbank-Konfiguration
DB_HOST=localhost
DB_USER=hymnoscribe_user
DB_PASSWORD=secure_password_here
DB_NAME=hymnoscribe_db

# Root-Passwort für MySQL (nur für Ersteinrichtung und Docker)
MYSQL_ROOT_PASSWORD=very_secure_root_password

# Superadmin-Passwort für die Anwendung
SUPER_PASSWORD=super_secure_admin_password

# Geheimnis für JWT-Token-Erstellung
JWT_SECRET=your_very_long_and_secure_random_string

# E-Mail-Konfiguration für Benachrichtigungen
EMAIL_HOST=your_smtp_server.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@yourapp.com

# URL des Frontends
FRONTEND_URL=http://localhost:9615